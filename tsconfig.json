{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@atom": ["src/atom"],
      "@api": ["src/api"],
      "@ProductOption":["src/components/product_option/ProductOption"],
      "@CountProduct":["src/components/count_product/CountProduct"],
      "@DefaultOption":["src/components/default_option/DefaultOption"],
      "@OcBtn":["src/components/submit_btn/OcBtn"],
      "@Product":["src/components/product/Product"],
      "@CancleBtn":["src/components/cancle_btn/CancleBtn"],
      "@BtnList":["src/components/another_btn/BtnList"],
      "@PhNumber":["src/components/ph_number/PhNumber"],
      "@DrinkList":["src/components/drink_list/DrinkList"],
      "@ProductList":["src/components/product_list/ProductList"],
      "@Summary":["src/components/summary/Summary"],
      "@SummaryItem":["src/components/summary_item/SummaryItem"],
      "@MainIndex":["src/pages/main_section/MainIndex"],
      "@CategoryDrink":["src/pages/ctg_section/CategoryDrink"],
      "@AllDrink":["src/pages/all_section/AllDrink"],
      "@Fallback":["src/pages/fallback_section/FallbackPage"],
      "@Error":["src/pages/error_section/ErrorElement"]
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}